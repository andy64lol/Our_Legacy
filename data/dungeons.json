  "challenge_templates": {
    "question": {
      "name": "Riddle Challenge",
      "description": "Solve riddles to proceed",
      "types": [
        {
          "id": "riddle_ancient",
          "question": "I speak without a mouth and hear without ears. I have no body, but I come alive with wind. What am I?",
          "answer": "echo",
          "hints": [
            "It's a sound-related phenomenon",
            "It repeats what you say",
            "It needs a space to form"
          ],
          "time_limit": 60,
          "failure_damage": 15,
          "success_reward": {"gold": 50, "experience": 100}
        },
        {
          "id": "riddle_treasure",
          "question": "The more you take, the more you leave behind. What am I?",
          "answer": "footsteps",
          "hints": [
            "You create these when walking",
            "They mark your path",
            "They disappear over time"
          ],
          "time_limit": 60,
          "failure_damage": 15,
          "success_reward": {"gold": 50, "experience": 100}
        },
        {
          "id": "riddle_mystery",
          "question": "I have cities, but no houses. I have mountains, but no trees. I have water, but no fish. What am I?",
          "answer": "map",
          "hints": [
            "It's something you can hold",
            "It shows places",
            "It has pictures of geography"
          ],
          "time_limit": 60,
          "failure_damage": 15,
          "success_reward": {"gold": 50, "experience": 100}
        },
        {
          "id": "riddle_time",
          "question": "What has keys but no locks, space but no room, and you can enter but can't go inside?",
          "answer": "keyboard",
          "hints": [
            "You use this every day",
            "It has letters and symbols",
            "It's used for input"
          ],
          "time_limit": 60,
          "failure_damage": 15,
          "success_reward": {"gold": 50, "experience": 100}
        },
        {
          "id": "riddle_shadow",
          "question": "What walks on four legs in the morning, two legs at noon, and three legs in the evening?",
          "answer": "human",
          "hints": [
            "It's a living being",
            "Think about life stages",
            "It represents the cycle of life"
          ],
          "time_limit": 60,
          "failure_damage": 15,
          "success_reward": {"gold": 50, "experience": 100}
        },
        {
          "id": "riddle_philosophy",
          "question": "To be, or not to be: that is the question. What is the answer?",
          "answer": "be",
          "hints": [
            "It's a simple word",
            "The opposite of 'not to'",
            "It's about existence"
          ],
          "time_limit": 60,
          "failure_damage": 15,
          "success_reward": {"gold": 50, "experience": 100}
        },
        {
          "id": "riddle_element",
          "question": "I am always hungry, I must always be fed. The finger I lick will soon turn red. What am I?",
          "answer": "fire",
          "hints": [
            "It's a natural element",
            "It needs oxygen",
            "It can be dangerous"
          ],
          "time_limit": 60,
          "failure_damage": 15,
          "success_reward": {"gold": 50, "experience": 100}
        },
        {
          "id": "riddle_life",
          "question": "The person who makes it has no need of it; the person who buys it has no use for it. The person who uses it can neither see nor feel it. What is it?",
          "answer": "coffin",
          "hints": [
            "It's related to death",
            "It's a container",
            "It's made of wood"
          ],
          "time_limit": 60,
          "failure_damage": 15,
          "success_reward": {"gold": 50, "experience": 100}
        }
      ]
    },
