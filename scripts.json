{
  "version": "1.0",
  "description": "Centralized script hook configuration for Our Legacy RPG",
  "settings": {
    "auto_load_all": true,
    "error_handling": "log_only",
    "log_level": "info",
    "enable_debug_mode": false
  },
  "hooks": {
    "on_battle_start": [
      {"script": "example_achievement_system", "priority": 100},
      {"script": "example_shop_system", "priority": 50}
    ],
    "on_battle_end": [
      {"script": "example_stat_tracker", "priority": 100},
      {"script": "example_dynamic_difficulty", "priority": 75}
    ],
    "on_player_turn": [
      {"script": "example_achievement_system", "priority": 50}
    ],
    "on_enemy_turn": [
      {"script": "example_dynamic_difficulty", "priority": 50}
    ],
    "on_player_levelup": [
      {"script": "example_buff_granter", "priority": 100},
      {"script": "example_companion_reward", "priority": 90},
      {"script": "example_achievement_system", "priority": 75}
    ],
    "on_item_acquired": [
      {"script": "example_achievement_system", "priority": 100},
      {"script": "example_stat_tracker", "priority": 75},
      {"script": "example_equipment_manager", "priority": 50}
    ],
    "on_companion_hired": [
      {"script": "example_achievement_system", "priority": 100}
    ],
    "on_mission_complete": [
      {"script": "example_achievement_system", "priority": 100},
      {"script": "example_stat_tracker", "priority": 90}
    ],
    "on_buff_applied": [
      {"script": "example_achievement_system", "priority": 50}
    ],
    "on_area_entered": [
      {"script": "example_exploration_manager", "priority": 100}
    ],
    "on_explore": [
      {"script": "example_exploration_manager", "priority": 100},
      {"script": "example_random_events", "priority": 50}
    ],
    "on_loot_drop": [
      {"script": "example_loot_modifier", "priority": 100},
      {"script": "example_achievement_system", "priority": 75}
    ],
    "on_shop_open": [
      {"script": "example_shop_system", "priority": 100}
    ],
    "on_tavern_open": [
      {"script": "example_achievement_system", "priority": 50}
    ]
  },
  "scripts_metadata": {
    "example_achievement_system": {
      "name": "Achievement System",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Tracks player achievements and milestones",
      "dependencies": []
    },
    "example_buff_granter": {
      "name": "Buff Granter",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Grants power buffs every 5 levels",
      "dependencies": []
    },
    "example_companion_reward": {
      "name": "Companion Reward",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Automatically recruits companions at certain levels",
      "dependencies": []
    },
    "example_dynamic_difficulty": {
      "name": "Dynamic Difficulty",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Adjusts game difficulty based on player performance",
      "dependencies": []
    },
    "example_equipment_manager": {
      "name": "Equipment Manager",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Smart auto-equip and equipment management",
      "dependencies": []
    },
    "example_exploration_manager": {
      "name": "Exploration Manager",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Area exploration and world modification",
      "dependencies": []
    },
    "example_loot_modifier": {
      "name": "Loot Modifier",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Modifies loot drop rates and rewards",
      "dependencies": []
    },
    "example_quest_giver": {
      "name": "Quest Giver",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Provides custom quests and rewards",
      "dependencies": []
    },
    "example_random_events": {
      "name": "Random Events",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Adds random events during exploration",
      "dependencies": []
    },
    "example_shop_system": {
      "name": "Shop System",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Player shop and trading system",
      "dependencies": []
    },
    "example_stat_tracker": {
      "name": "Stat Tracker",
      "version": "1.0",
      "author": "Our Legacy Team",
      "description": "Tracks gameplay statistics",
      "dependencies": ["example_achievement_system"]
    }
  }
}

